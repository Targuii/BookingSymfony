{% extends 'admin/base.html.twig' %}

{% block title %}Géstion des utilisateurs{% endblock %}

{% block body %}

<main class="container-fluid px-5">
    <h1 class="my-5 h4 pl-3"><i class="fas fa-code"></i> Gestion des Utilisateurs</h1>
    <div class="row mx-3">
        <table class="table table-hover" id="table-admin">
            <thead>
                <tr class="table-dark text-dark">
                    <th scope="col" data-sort="float" data-sort-default="desc"><i class="fa fa-sort"></i> Id</th>
                    <th scope="col" class="text-center">Avatar</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Introduction</th>
                    {# <th scope="col">Description</th> #}
                    <th scope="col" class="text-center">Annonces</th>
                    <th scope="col" class="text-center">Résa</th>
                    <th scope="col" class="text-center"><i class="fas fa-tools"></i></th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                    <tr>
                        <th scope="row">{{user.id}}</td>
                        <td class="text-primary text-center"><a href="{{path('user_show',{'slug':user.slug})}}" style="text-decoration:none;" target="_blank">
                        <img src="{{user.avatar}}" alt="{{user.fullName}}" class="avatar-list mr-2"> </a></td>
                        <td class="text-primary"><strong>{{user.lastname}}</strong></td>
                        <td class="text-primary"><strong>{{user.firstname}}</strong></td>
                        <td>{{user.email}}</td>
                        <td>{{user.introduction}}</td>
                        {# <td>{{user.description}}</td> #}
                        <td class="text-center"><span class="badge badge-dark">{{user.ads|length}}</span></td>
                        <td class="text-center"><span class="badge badge-dark">{{user.bookings|length}}</span></td>
                        <td class="text-center">
                        <a href="{{path('admin_user_edit',{'id':user.id})}}" class="text-dark mr-2"><i class="fas fa-pencil-alt"></i></a>
                        <a href="{{path('admin_user_delete',{'id':user.id})}}" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{{ pagination.display() }}
</main>

{% endblock %}
