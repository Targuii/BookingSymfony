{% extends 'admin/base.html.twig' %}

{% block title %}Modifier une Réservation{% endblock %}

{% block body %}
    <main class="container py-5">
        <h1 class="my-5 h4"><i class="fas fa-code"></i> Modifier la réservation n°{{booking.id}}</h1>

        {{form_start(form)}}
        <div class="row">
            <div class="col">
            {{form_row(form.startDate)}}
            {{form_row(form.endDate)}}
            {{form_row(form.comment)}}
            </div>
            <div class="col">
            {{form_row(form.booker)}}
            {{form_row(form.ad)}}
            </div>
        </div>

        <button class="btn btn-outline-info btn-sm mt-3" type="submit"><i class="fas fa-check"></i> Enregistrer</button>
        <a href="javascript:history.go(-1)" class="btn btn-link mt-3"><i class="fas fa-undo"></i> Retour</button>

        {{form_end(form)}}
    
    </main>

{% endblock %}