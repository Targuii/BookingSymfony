{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

<div class="example-wrapper">
<main class="container">
<h1 class=" mt-4 mb-3">{{ controller_name }}</h1>
<div class="row">
    {% for ad in ads %}

        {% set url= path('ads_single',{'slug':ad.slug}) %}
        <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-header"><h4 class="card-title">{{ad.rooms}} chambres {{ad.price}} &euro;/jour</h4></div>
                <div class="card-body">
                <a href="{{ url }}">
                    <img src="{{ad.coverImage}}}" alt"{{ad.title}}" style="height: 200px; width: 100%; display: block;">
                </a>
                    <p class="card-text">{{ad.introduction}}</p>
                    <a href="{{ url }}" class="btn btn-secondary btn-sm">+ d'infos</a>
                </div>
                <div class="card-footer text-muted">
                <span>Pas encore not√©</span>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
</main>
</div>
{% endblock %}
