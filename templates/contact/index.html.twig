{% extends 'contact.html.twig' %}

{% block title %}Contactez nous{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h5>Contactez nous</h5>
    </div>
    <div class="container mb-3">
        {% for label,messages in app.flashes %}
            <div class="container">
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p><i class="far fa-share-square"></i> {{ message | raw }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        {% if not form.vars.valid %}
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>  Erreur ! Message non valide. Merci de re-essayer.
            </div>
        {% endif %}
        {{ form_start(form) }}
        <div class="mt-2">
            <div class="row">
                <div class="col">{{ form_row(form.lastname) }}</div>
                <div class="col">{{ form_row(form.firstname) }}</div>
            </div>
            <div class="row">
                <div class="col">{{ form_row(form.phone) }}</div>
                <div class="col">{{ form_row(form.email) }}</div>
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <button class="btn btn-outline-info btn-sm">Envoyer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
